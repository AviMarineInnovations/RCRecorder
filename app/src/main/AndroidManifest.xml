<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  package="in.avimarine.racecommittee">

  <application
    android:allowBackup="true"
    android:icon="@mipmap/ic_launcher"
    android:label="@string/app_name"
    android:roundIcon="@mipmap/ic_launcher_round"
    android:supportsRtl="true"
    android:theme="@style/AppTheme">
    <activity android:name=".activities.MainActivity">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>

        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>
    <activity
      android:label="@string/title_activity_race_input"
      android:name=".activities.RaceInputActivity"
      android:parentActivityName=".activities.MainActivity"
      android:theme="@style/AppTheme.NoActionBar">
      <meta-data
        android:name="android.support.PARENT_ACTIVITY"
        android:value="in.avimarine.racecommittee.activities.MainActivity"/>
    </activity>
    <activity android:name=".activities.RaceSelectActivity">
    </activity>
    <activity android:name=".activities.RaceInput2Activity">
    </activity>
  </application>

</manifest>