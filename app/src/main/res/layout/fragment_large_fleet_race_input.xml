<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context="in.avimarine.racecommittee.activities.RaceInput2Activity">


  <GridView
    android:id="@+id/grid"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:maxHeight="480dp"
    android:columnWidth="90dp"
    android:horizontalSpacing="5dp"
    android:numColumns="auto_fit"
    android:verticalSpacing="5dp"/>
  <LinearLayout
    android:id="@+id/sail_no_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/grid">
    <TextView
      android:id="@+id/country_code_tv"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:textSize="20sp"
      android:minEms="4"
      android:text=""/>
    <TextView
      android:id="@+id/sail_no_tv"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:textSize="20sp"
      android:text=""/>
    <Button
      android:id="@+id/set_btn"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Set"/>
  </LinearLayout>
  <GridView
    android:id="@+id/numbers_grid"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:columnWidth="15dp"
    android:horizontalSpacing="5dp"
    android:numColumns="3"
    android:verticalSpacing="5dp"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@id/sail_no_ll"/>

</android.support.constraint.ConstraintLayout>
